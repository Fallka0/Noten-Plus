<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="noten.Pages.InfoPage"
             Title="Info">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Image Source="Resources/Images/logo.svg" HeightRequest="80" HorizontalOptions="Center" />
            <Label Text="Noten +" Style="{StaticResource Headline}" />
            <Label Text="Mykyta Pantelei, INF24I, Modul 322" />
            <Label Text="Version 1.0.0 (06.11.2025)" />

            <Frame>
                <VerticalStackLayout Spacing="6">
                    <Label Text="Beschreibung" FontAttributes="Bold" />
                    <Label Text="Noten + ist eine App zur Verwaltung von Schulnoten (UI-only Demo)." />
                </VerticalStackLayout>
            </Frame>

            <Button Text="FAQ" Clicked="OnFAQClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>