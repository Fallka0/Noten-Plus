<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="noten.Pages.FAQPage"
             Title="FAQ">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Label Text="FAQ"
                   Style="{StaticResource Headline}"
                   FontAttributes="Bold" />

            <!-- FAQ 1 -->
            <Frame>
                <VerticalStackLayout Spacing="8">

                    <Grid>
                        <Label Text="Wie speichere ich meine Noten?"
                               FontAttributes="Bold"
                               TextColor="Black" />
                        <Label Text="▼"
                               HorizontalOptions="End"
                               TextColor="#666" />
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnFaq1Tapped"/>
                        </Grid.GestureRecognizers>
                    </Grid>

                    <Label x:Name="Faq1Answer"
                           Text="Diese Demo speichert Inhalte nicht dauerhaft; sie zeigt die UI-Elemente."
                           TextColor="Black"
                           IsVisible="False"/>
                </VerticalStackLayout>
            </Frame>

            <!-- FAQ 2 -->
            <Frame>
                <VerticalStackLayout Spacing="8">

                    <Grid>
                        <Label Text="Gibt es eine Exportfunktion?"
                               FontAttributes="Bold"
                               TextColor="Black" />
                        <Label Text="▼"
                               HorizontalOptions="End"
                               TextColor="#666" />
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnFaq2Tapped"/>
                        </Grid.GestureRecognizers>
                    </Grid>

                    <Label x:Name="Faq2Answer"
                           Text="Export als CSV/PDF ist geplant; hier nur UI-Elemente vorhanden."
                           TextColor="Black"
                           IsVisible="False"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
