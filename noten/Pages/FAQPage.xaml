<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="noten.Pages.FAQPage"
             Title="FAQ">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label Text="FAQ" Style="{StaticResource Headline}" />

            <Frame>
                <VerticalStackLayout>
                    <Label Text="Wie speichere ich meine Noten?" FontAttributes="Bold" TextColor="#000000" />
                    <Label Text="Diese Demo speichert Inhalte nicht dauerhaft; sie zeigt die UI-Elemente." TextColor="#000000" />
                </VerticalStackLayout>
            </Frame>

            <Frame>
                <VerticalStackLayout>
                    <Label Text="Gibt es eine Exportfunktion?" FontAttributes="Bold" TextColor="#000000" />
                    <Label Text="Export als CSV/PDF ist geplant; hier nur UI-Elemente vorhanden." TextColor="#000000" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>