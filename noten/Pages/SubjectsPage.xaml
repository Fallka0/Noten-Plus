<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="noten.Pages.SubjectsPage"
             Title="Fächer">
    <VerticalStackLayout Padding="20" Spacing="12">
        <Label Text="Fächer" Style="{StaticResource Headline}" />

        <HorizontalStackLayout Spacing="8">
            <Entry x:Name="NewSubjectEntry" Placeholder="Neues Fach" />
            <Button Text="Hinzufügen" Clicked="OnAddSubjectClicked" />
        </HorizontalStackLayout>

        <CollectionView x:Name="SubjectsCollection" SelectionMode="None">
    <CollectionView.ItemTemplate>
        <DataTemplate x:DataType="x:String">
            <Frame Margin="0,6" Padding="10">
                <HorizontalStackLayout>
                    <Label Text="{Binding}" VerticalOptions="Center" TextColor="#000000" Padding="20"/>
                    <Button Text="Entfernen"
                            Clicked="OnRemoveSubjectClicked"
                            CommandParameter="{Binding}"
                            HorizontalOptions="End" />
                </HorizontalStackLayout>
            </Frame>
        </DataTemplate>
    </CollectionView.ItemTemplate>
</CollectionView>


    </VerticalStackLayout>
</ContentPage>