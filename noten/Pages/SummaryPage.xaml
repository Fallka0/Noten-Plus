<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="noten.Pages.SummaryPage"
             Title="Zusammenfassung">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label Text="Eingabe erfolgreich" Style="{StaticResource Headline}" />
            <Frame>
                <VerticalStackLayout Spacing="6">
                    <Label Text="Fach:" FontAttributes="Bold" TextColor="#000000"/>
                    <Label x:Name="SubjectLabel" TextColor="#000000"/>
                    <Label Text="Note:" FontAttributes="Bold" TextColor="#000000"/>
                    <Label x:Name="GradeLabel" TextColor="#000000"/>
                    <Label Text="Gewichtung:" FontAttributes="Bold" TextColor="#000000" />
                    <Label x:Name="WeightLabel" TextColor="#000000"/>
                    <Label Text="Datum:" FontAttributes="Bold" TextColor="#000000" />
                    <Label x:Name="DateLabel" TextColor="#000000"/>
                </VerticalStackLayout>
            </Frame>

            <Button Text="Fertig" Clicked="OnDoneClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>