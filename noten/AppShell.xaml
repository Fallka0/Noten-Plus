<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="noten.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:noten.Pages"
    Title="Noten +"
    Shell.NavBarIsVisible="False">

    <TabBar>
        <ShellContent Title="Home"
                      Icon="home.png"
                      ContentTemplate="{DataTemplate pages:DashboardPage}" />
                    

        <ShellContent Title="Analytics"
                      Icon="bar_chart.png"
                      ContentTemplate="{DataTemplate pages:AnalyticsPage}" />

        <ShellContent Title="FAQ"
                      Icon="faq.png"
                      ContentTemplate="{DataTemplate pages:FAQPage}" />

        <ShellContent Title="Info"
                      Icon="information.png"
                      ContentTemplate="{DataTemplate pages:InfoPage}" />
        <ShellContent Title="Login"
              Icon="user.png"
              ContentTemplate="{DataTemplate pages:LoginPage}" />
    </TabBar>

</Shell>
